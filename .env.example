# ============================================
# BytePlus API Configuration
# ============================================
# Get your API key from: https://console.byteplus.com

# Required: BytePlus API Key
BYTEPLUS_API_KEY=your_byteplus_api_key_here

# Optional: Custom Base URL (defaults to https://ark.ap-southeast.bytepluses.com)
# BYTEPLUS_BASE_URL=https://ark.ap-southeast.bytepluses.com

# Optional: Service-specific endpoints
# If not specified, defaults to standard BytePlus endpoints
# BYTEPLUS_IMAGE_ENDPOINT=https://ark.ap-southeast.bytepluses.com/api/v3/images/generations
# BYTEPLUS_EDIT_ENDPOINT=https://ark.ap-southeast.bytepluses.com/api/v3/images/edits
# BYTEPLUS_VIDEO_ENDPOINT=https://ark.ap-southeast.bytepluses.com/api/v3/videos/generations
# BYTEPLUS_TEXT_ENDPOINT=https://ark.ap-southeast.bytepluses.com/api/v3/chat/completions
# BYTEPLUS_OPTIMIZE_ENDPOINT=https://ark.ap-southeast.bytepluses.com/api/v3/text/optimize

# Deprecated (for backward compatibility - will be removed in v2.0)
# Use BYTEPLUS_IMAGE_ENDPOINT instead
BYTEPLUS_ENDPOINT=https://ark.ap-southeast.bytepluses.com/api/v3/images/generations

# ============================================
# GitHub Configuration
# ============================================
# Required for Agent operations and automation

GITHUB_TOKEN=your_github_personal_access_token_here
GITHUB_OWNER=your_github_username_here
GITHUB_REPO=test_miyabi


# ============================================
# JWT Authentication (Web App)
# ============================================
# Required for web application authentication

# JWT Secret (use strong random string in production)
JWT_SECRET=your_secure_random_secret_key_here

# JWT Refresh Secret (different from JWT_SECRET)
JWT_REFRESH_SECRET=your_refresh_secret_key_here

# Token Expiration
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# ============================================
# Database Configuration
# ============================================
# Required for web application

# SQLite (Development)
DATABASE_URL=file:./prisma/dev.db

# MySQL (Production - example)
# DATABASE_URL=mysql://user:password@host:3306/database

# PostgreSQL (Production - example)
# DATABASE_URL=postgresql://user:password@host:5432/database

# ============================================
# Application Configuration
# ============================================

# Environment (development | production | test)
NODE_ENV=development

# Server Port (for web application)
PORT=3000

# Log Level (debug | info | warn | error)
LOG_LEVEL=info

# ============================================
# Rate Limiting Configuration
# ============================================

# Max requests per window (default: 10)
RATE_LIMIT_MAX_REQUESTS=10

# Window duration in milliseconds (default: 60000 = 1 minute)
RATE_LIMIT_WINDOW_MS=60000

# ============================================
# Agent Configuration
# ============================================

# Enable debug mode for agents
DEBUG_AGENTS=false

# Agent concurrency limit
AGENT_CONCURRENCY=3

# Agent timeout (milliseconds)
AGENT_TIMEOUT=300000
